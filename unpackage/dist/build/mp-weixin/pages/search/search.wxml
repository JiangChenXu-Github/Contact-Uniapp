<view class="appwrapper"><view class="top-bar"><view class="left-input"><input type="text" placeholder="搜索用户/群" data-event-opts="{{[['input',[['__set_model',['','keyword','$event',[]]],['inputEvent',['$event']]]]]}}" value="{{keyword}}" bindinput="__e"/><view class="iconfont icon-icon-test _i"></view></view><view data-event-opts="{{[['tap',[['cancelEvent',['$event']]]]]}}" class="right-cancel" bindtap="__e">取消</view></view><view class="bottom-content"><view class="top-user"><view class="top-title">用户</view><block wx:for="{{userInformation}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="bottom-list"><view class="left"><image class="left-avatar" src="{{item.avatar}}" mode="aspectFill" data-event-opts="{{[['tap',[['tofriendDetailEvent',[index]]]]]}}" bindtap="__e"></image><view class="right-info"><view class="top-name">{{item.username}}</view><view class="bottom-email">{{item.email}}</view></view></view><view data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="right" style="{{(item.friendStatus===0||item.friendStatus===2?{backgroundColor:'#FFE431',color:'#272832'}:{backgroundColor:'rgba(74,170,255,0.10)',color:'#4AAAFF'})}}" bindtap="__e">{{item.friendStatus===0?'关注':item.friendStatus===1?'已关注':item.friendStatus===2?'互相关注':'已互相关注'}}</view></view></block></view><view class="bottom-group"><view class="top-title">群组</view><block wx:for="{{groupInformation}}" wx:for-item="item" wx:for-index="__i0__" wx:key="id"><view class="bottom-list"><view class="left"><image class="left-avatar" src="{{item.cover}}" mode="aspectFill" data-event-opts="{{[['tap',[['toCrowdDetail',['$0'],[[['groupInformation','id',item.id]]]]]]]}}" bindtap="__e"></image><view class="right-info"><view class="top-name">{{item.crowdName}}</view><view class="bottom-email">{{"id："+item.id}}</view></view></view><view data-event-opts="{{[['tap',[['e1',['$event']]]]]}}" class="right" style="{{(item.isMember?{backgroundColor:'rgba(74,170,255,0.10)',color:'#4AAAFF'}:{backgroundColor:'#FFE431',color:'#272832'})}}" bindtap="__e">{{item.isMember?'退群':'加群'}}</view></view></block></view></view></view>