<view class="appwrapper"><image class="background" src="{{crowdInfo.cover}}" mode="aspectFill"></image><view class="top-bar"><view data-event-opts="{{[['tap',[['backEvent',['$event']]]]]}}" class="iconfont icon-arrow-left _i" bindtap="__e"></view></view><view class="bottom-content"><view class="line1-information"><view class="top-name_time"><text class="left-name">{{crowdInfo.crowdName}}</text><text class="right-time">{{"id："+crowdInfo.id}}</text></view><text class="bottom-announcement">{{crowdInfo.announcement}}</text></view><view class="line2-member"><view class="top-introduction"><text class="left">群成员</text><view class="right"><text>成员管理</text><view class="iconfont icon-youjiantou _i"></view></view></view><view class="bottom-member"><block wx:for="{{crowdInfo.members}}" wx:for-item="item" wx:for-index="__i0__" wx:key="id"><view class="line-member"><image src="{{item.avatar}}" mode="aspectFill"></image><text>{{item.crowdNickname}}</text></view></block><view data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="bottom-invite" bindtap="__e"><view><view class="iconfont icon-jiahao _i"></view></view><text>邀请</text></view></view></view><view class="line3-detail"><view data-event-opts="{{[['tap',[['e1',['$event']]]]]}}" class="line" bindtap="__e"><view class="left-info"><text class="left-title">群名称</text><text class="right-detail">{{crowdInfo.crowdName}}</text></view><view hidden="{{!(isCrowdOwner)}}" class="right-update iconfont icon-youjiantou _i"></view></view><view data-event-opts="{{[['tap',[['e2',['$event']]]]]}}" class="line" bindtap="__e"><view class="left-info"><text class="left-title">群公告</text><text class="right-detail">{{crowdInfo.announcement}}</text></view><view hidden="{{!(isCrowdOwner)}}" class="right-update iconfont icon-youjiantou _i"></view></view><view data-event-opts="{{[['tap',[['e3',['$event']]]]]}}" class="line" bindtap="__e"><view class="left-info"><text class="left-title">群昵称</text><text class="right-detail">{{isMember?myCrowdNickname:'#未设置#'}}</text></view><view hidden="{{!(isMember)}}" class="right-update iconfont icon-youjiantou _i"></view></view></view><text data-event-opts="{{[['tap',[['e4',['$event']]]]]}}" class="line4-button" bindtap="__e">{{isMember?'进入群聊':'申请加群'}}</text></view></view>